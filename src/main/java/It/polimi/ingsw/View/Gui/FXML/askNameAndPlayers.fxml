<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="It.polimi.ingsw.View.Gui.GuiController.AskNameAndPlayersController">
   <children>
      <TextField fx:id="nicknameTextField" layoutX="226.0" layoutY="88.0" promptText="your nickname">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Label fx:id="nameLabel" alignment="CENTER" layoutY="23.0" prefHeight="59.0" prefWidth="600.0" text="Insert your name">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <RadioButton fx:id="PlayersButton2" layoutX="226.0" layoutY="182.0" mnemonicParsing="false" selected="true" text="2">
         <font>
            <Font size="20.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="NumberOfPlayersButtons" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="PlayersButton3" layoutX="333.0" layoutY="182.0" mnemonicParsing="false" text="3" toggleGroup="$NumberOfPlayersButtons">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <Label fx:id="NumberOfPlayersLabel" alignment="CENTER" layoutX="2.0" layoutY="139.0" prefHeight="18.0" prefWidth="600.0" text="Choose the number of players">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="-1.0" layoutY="221.0" prefHeight="27.0" prefWidth="602.0" text="Choose the game mode">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <RadioButton fx:id="GameModeNormal" layoutX="175.0" layoutY="286.0" mnemonicParsing="false" selected="true" text="Normal">
         <font>
            <Font size="20.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="GameModeButton" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="GameModeExpert" layoutX="354.0" layoutY="286.0" mnemonicParsing="false" text="Expert" toggleGroup="$GameModeButton">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <Button fx:id="okButton" layoutX="276.0" layoutY="339.0" mnemonicParsing="false" onAction="#getAnswers" text="OK">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
